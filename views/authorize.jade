extends layout

block content
  .container.main
    .row
       .col-md-6.text-left
        img(src='/images/HID-BIG.png', alt='Error').hid-logo
    #mainContainer
      #container.main-container
        .row
          .col-sm-8.col-sm-offset-1.col-md-6.col-md-offset-3.main-text
            form.form-signin(method='post', action='', role='form')
                h2.form-signin-heading Authorize Humanitarian Contacts
                .form-group
                  .div 
                  p.font-white #{ __("You are one step away from being able to use your Humanitarian ID login for Humanitarian contacts") }
                  h4.form-signin-heading #{ __("This Application will be able to:") }

                  ul.authorize-list
                    li
                      span.fa.fa-check.check-size
                      col-sm-8
                      span.font-style #{ __("View your profile information") }

                  h4.form-signin-heading.margin-padding #{ __("This application WILL NOT be able to:") }
                  ul.authorize-list
                    li
                      span.fa.fa-times.cross-size
                      col-sm-8
                      span.font-style #{ __("View your password") }

                .form-group
                  input(type='hidden', name='allow', value='yes')
                  input(type='hidden', name='client_id', value='#{client_id}')
                  input(type='hidden', name='redirect_uri', value='#{redirect_uri}')
                  input(type='hidden', name='response_type', value='#{response_type}')
                  input(type='hidden', name='scope', value='#{scope}')
                  input(type='hidden', name='_csrf', value='#{csrf}')
                  button.submit-button.btn.btn-lg.btn-primary.btn-arrow.btn-block(type='submit') #{ __("Thanks I got it") }
                    span.fa.fa-angle-right
          #image.globe
            span.fa.fa-globe
